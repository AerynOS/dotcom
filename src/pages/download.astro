---
import { schema_web_page } from "@/schema_org/index";
import MainLayout from "@/layouts/MainLayout.astro";
import Cover from "@/components/sections/landing/Cover.astro";
import { getCollection } from "astro:content";
const editions = await getCollection("edition");

import EditionInfo from "@/components/sections/EditionInfo.astro";
const title: string = "Download";
const subTitle: string = "Grab the latest release now ðŸš€";
---

<MainLayout
  title={title}
  structuredData={schema_web_page({
    path: Astro.url.pathname,
    name: title,
    description: subTitle,
  })}
>
  <Cover title={title}>
    {subTitle}
  </Cover>

  {editions.map((edition) => <EditionInfo edition={edition} />)}
</MainLayout>
